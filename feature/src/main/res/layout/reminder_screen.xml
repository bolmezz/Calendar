<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:background="@drawable/bg_btn"
        android:text="OK"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cancel_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remind_btn"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:background="@drawable/bg_btn"
        android:text="Cancel"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ok_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remind_btn"
        tools:ignore="MissingConstraints" />


    <RadioGroup
        android:id="@+id/remind_btn"
        android:layout_width="183dp"
        android:layout_height="347dp"
        app:layout_constraintBottom_toTopOf="@+id/ok_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_remind"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/remind_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Etkinlik Saatinde" />

        <RadioButton
            android:id="@+id/remind_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Etkinlikten 5 dk önce" />

        <RadioButton
            android:id="@+id/remind_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Etkinlikten 1 hafta önce" />

        <RadioButton
            android:id="@+id/remind_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Etkinlikten 15 dk önce" />

        <RadioButton
            android:id="@+id/remind_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Etkinlikten 30 dk önce" />

        <RadioButton
            android:id="@+id/remind_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Etkinlikten 1 saat önce" />

        <RadioButton
            android:id="@+id/remind_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Etkinlikten 2 saat önce" />

        <RadioButton
            android:id="@+id/remind_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Etkinlikten 1 gün önce" />

        <RadioButton
            android:id="@+id/remind_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Etkinlikten 2 gün önce" />

    </RadioGroup>

    <TextView
        android:id="@+id/text_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remind Me :"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="16dp" />


</android.support.constraint.ConstraintLayout>